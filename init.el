   dotspacemacs-distribution 'spacemacs;-base
   dotspacemacs-configuration-layers
   '(razzi-evil
     markdown
     ivy
     ;; ivy-flx ; todo re-enable
     ;; auto-completion
     emacs-lisp
     git
     ;; org
     ;; (shell :variables
     ;;        shell-default-height 30
     ;;        shell-default-position 'bottom)
     ;; spell-checking
     ;; syntax-checking
     ;; version-control
     razzi-magit
